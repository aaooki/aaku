;
;   To learn more about how to configure Polybar
;   go to https://github.com/jaagr/polybar
;
;   The README contains alot of information
;
;=====================================================

[colors]
background = #e61b1918
foreground = ${xrdb:color15}
blue       = ${xrdb:color4}
red        = ${xrdb:color1}
green      = ${xrdb:color2}
inactive   = #373b41

[bar/main]
width               = 100%
height              = 27
border-size         = 0
padding-left        = 0
padding-right       = 2
module-margin-left  = 1
module-margin-right = 1
tray-position       = right

background = ${colors.background}
foreground = ${colors.foreground}
font-0     = Hack:pixelsize=9;
font-1     = FontAwesome:pixelsize=12;1
font-2     = feather:pixelsize=12;1

modules-left   = i3
modules-right  = mediaplayer xkeyboard sysupdates weather prayer volume battery date

[module/i3]
type            = internal/i3
format          = <label-state> <label-mode>
index-sort      = true
wrapping-scroll = false

label-mode-padding          = 1
label-mode-foreground       = ${colors.foreground}
label-mode-background       = ${colors.background}

;Active workspace on focused monitor
label-focused               = %index%: %icon%
label-focused-padding       = ${self.label-mode-padding}
label-focused-foreground    = ${colors.blue}
label-focused-background    = ${colors.background}

;Inactive workspace on any monitor
label-unfocused            = %index%: %icon%
label-unfocused-padding    = ${self.label-mode-padding}
label-unfocused-foreground = ${colors.inactive}

;Active workspace on unfocused monitor
label-visible               = %index%: %icon%
label-visible-padding       = ${self.label-mode-padding}
label-visible-background    = ${self.label-focused-background}

;Workspace with urgency hint set
label-urgent                = %index%: %icon%
label-urgent-padding        = ${self.label-mode-padding}
label-urgent-foreground     = ${colors.red}
label-urgent-background     = ${self.label-mode-background}

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;

[module/mediaplayer]
type     = custom/script
exec     = mediaplayer
interval = 1

[module/xkeyboard]
type         = internal/xkeyboard
blacklist-0  = num lock
blacklist-1  = scroll lock
blacklist-2  = caps lock
label-layout = %layout%

[module/sysupdates]
type     = custom/script
exec     = sysupdates
interval = 86400

[module/weather]
type     = custom/script
exec     = weather
interval = 600

[module/prayer]
type     = custom/script
exec     = prayer
interval = 600

[module/volume]
type                = internal/volume
format-volume       = <ramp-volume> <label-volume>
label-volume        = %percentage%%
format-muted-prefix = " "
label-muted         = MUTED
ramp-volume-0       = 
ramp-volume-1       = 
ramp-volume-2       = 

[module/battery]
type          = internal/battery
full-at       = 100
battery       = BAT0
adapter       = AC
poll-interval = 5
time-format   = %H:%M

format-charging    = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
label-charging     = %percentage%% (%time%)
label-discharging  = %percentage%% (%time%)

label-full = 
; Only applies if <ramp-capacity> is used
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
; Only applies if <bar-capacity> is used
bar-capacity-width = 10
; Only applies if <animation-charging> is used
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
; Framerate in milliseconds
animation-charging-framerate = 750

[module/date]
type                     = internal/date
interval                 = 1
format-prefix-foreground = ${colors.foreground}
date                     = "%a %b %d"
time                     = %I:%M %p
label                    = %date% %time%

; vim:ft=dosini
