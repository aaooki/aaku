# Load necessary files
if [ -d $HOME/.zsh ]; then
  for file in $HOME/.zsh/*.zsh; do
    source $file
  done
fi

# Support 256-color terminals
export TERM=screen-256color

# chruby
source /usr/share/chruby/chruby.sh
source /usr/share/chruby/auto.sh

# Go
export GOPATH="$WK/go"
export PATH=$PATH:/usr/local/go/bin
