# sourced in interactive shell

include () {
  [[ -f "$1" ]] && source "$1"
}

export WK="$HOME/Workspace"

if [ -d $HOME/.zsh ]; then
  for file in $HOME/.zsh/**/*.zsh; do
    source $file
  done
fi

export AAKU="$WK/aaku"
export PATH="$PATH:$AAKU/bin"
export PATH="$PATH:$WK/bin"
export PATH="$PATH:$WK/onpar/bin"

# Ruby
include /usr/share/chruby/chruby.sh
include /usr/share/chruby/auto.sh

# Go
export GOPATH="$WK/go"
export PATH=$PATH:$(go env GOROOT)/bin:$(go env GOPATH)/bin

# Javascript
export PATH="$PATH:$HOME/.yarn/bin"
export NVM_DIR="$HOME/.nvm"
include $NVM_DIR/nvm.sh

# FZF
export FZF_DEFAULT_COMMAND='rg --files --hidden --color never'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
include ~/.fzf.zsh

# nnn
export NNN_COLORS='4213'
export NNN_BMS='w:~/Workspace;d:~/Documents;v:~/Videos;D:~/Downloads;n:~/Dropbox/notes'
export NNN_PLUG='l:-launch;'
